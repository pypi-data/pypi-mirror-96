<tryton>
    <data>
        <record model="ir.ui.view" id="batch_journal_view_form">
            <field name="model">account.batch.journal</field>
            <field name="type">form</field>
            <field name="name">batch_journal_form</field>
        </record>
        <record model="ir.ui.view" id="batch_journal_view_tree">
            <field name="model">account.batch.journal</field>
            <field name="type">tree</field>
            <field name="name">batch_journal_tree</field>
        </record>

	<record model="ir.action.act_window" id="act_batch_journal_form">
            <field name="name">Batch Journals</field>
            <field name="res_model">account.batch.journal</field>
        </record>
        <record model="ir.action.act_window.view" id="act_batch_journal_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="batch_journal_view_tree"/>
            <field name="act_window" ref="act_batch_journal_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_batch_journal_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="batch_journal_view_form"/>
            <field name="act_window" ref="act_batch_journal_form"/>
        </record>
        <menuitem parent="menu_batch_configuration" sequence="1"
            action="act_batch_journal_form" id="menu_batch_journal_form"/>

        <record model="ir.model.access" id="access_batch_journal">
            <field name="model" search="[('model', '=', 'account.batch.journal')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_batch_journal_admin">
            <field name="model" search="[('model', '=', 'account.batch.journal')]"/>
            <field name="group" ref="account.group_account_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
    </data>
</tryton>
