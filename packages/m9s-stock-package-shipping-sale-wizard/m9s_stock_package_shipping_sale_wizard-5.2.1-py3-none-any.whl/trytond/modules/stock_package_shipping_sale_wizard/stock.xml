<tryton>
    <data>
        <record model="res.group" id="group_shipping_sale_wizard">
            <field name="name">Shipping Wizard</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_shipping_sale_wizard">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_shipping_sale_wizard"/>
        </record>

        <record model="ir.ui.view" id="create_shipping_start_view_form">
            <field name="model">stock.shipment.sale.create_shipping.start</field>
            <field name="type">form</field>
            <field name="name">create_shipping_start_form</field>
        </record>

        <record model="ir.action.wizard" id="act_create_shipping">
            <field name="name">Create Shipping</field>
            <field name="wiz_name">stock.shipment.sale.create_shipping</field>
            <field name="window" eval="True"/>
        </record>
        <menuitem parent="stock.menu_stock" action="act_create_shipping"
            id="menu_create_shipping_from_sale" sequence="100"/>

        <record model="ir.model.access" id="access_shipping_sale_wizard">
            <field name="model" search="[('model', '=', 'sale.sale')]"/>
            <field name="group" ref="group_shipping_sale_wizard"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
    </data>
</tryton>
