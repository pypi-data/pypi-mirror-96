<tryton>
    <data>
        <record model="ir.ui.view" id="sale_view_form">
            <field name="model">sale.sale</field>
            <field name="inherit" ref="sale.sale_view_form"/>
            <field name="name">sale_form</field>
        </record>
        <record model="ir.action.wizard" id="wizard_add_payment">
            <field name="name">Add Payment</field>
            <field name="wiz_name">sale.payment.add</field>
            <field name="model">sale.sale</field>
        </record>
        <record model="ir.ui.view" id="sale_payment_add_view_form">
            <field name="model">sale.payment.add_view</field>
            <field name="type">form</field>
            <field name="name">sale_payment_add_form</field>
        </record>
        <record model="ir.action.act_window" id="act_sale_relate">
            <field name="name">Payments</field>
            <field name="res_model">sale.payment</field>
            <field name="domain" eval="[('sale', 'in', Eval('active_ids'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_sale_keyword">
            <field name="keyword">form_relate</field>
            <field name="model">sale.sale,-1</field>
            <field name="action" ref="act_sale_relate"/>
        </record>

	<!-- Buttons -->
	<record model="ir.model.button" id="sale_add_payment_button">
            <field name="name">add_payment</field>
            <field name="string">Add payment</field>
            <field name="model" search="[('model', '=', 'sale.sale')]"/>
        </record>
        <record model="ir.model.button-res.group" id="sale_add_payment_button_group_sale">
            <field name="button" ref="sale_add_payment_button"/>
            <field name="group" ref="sale.group_sale"/>
        </record>

	<record model="ir.model.button" id="sale_auth_capture_button">
            <field name="name">auth_capture</field>
            <field name="string">Capture payment</field>
            <field name="model" search="[('model', '=', 'sale.sale')]"/>
        </record>
        <record model="ir.model.button-res.group" id="sale_auth_capture_button_group_sale">
            <field name="button" ref="sale_auth_capture_button"/>
            <field name="group" ref="sale.group_sale"/>
        </record>


    </data>
</tryton>
