    "version": "0.2.0",
    "configurations": [

        {
            "name": "Pytest (all tests)",
            "type": "python",
            "request": "launch",
            "debugOptions": ["DebugStdLib"],
            "module": "pytest",
            "args": [
                "-xsv",
                "--no-cov"
            ],
        },
        {
            "name": "Pytest (current file)",
            "type": "python",
            "request": "launch",
            "debugOptions": ["DebugStdLib"],
            "module": "pytest",
            "args": [
                "${file}",
                "-xsv",
                "--no-cov"
            ],
        }
    ]
}