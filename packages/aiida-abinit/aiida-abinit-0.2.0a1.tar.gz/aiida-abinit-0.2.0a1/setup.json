{
    "name": "aiida-abinit",
    "author": "Samuel Ponce",
    "author_email": "samuel.pon@gmail.com",
    "description": "The AiiDA plugin for ABINIT.",
    "url": "https://github.com/sponce24/aiida-abinit",
    "license": "MIT",
    "classifiers": [
        "Programming Language :: Python",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Natural Language :: English",
        "Framework :: AiiDA"
    ],
    "version": "0.2.0a1",
    "entry_points": {
        "aiida.data": [
            "abinit = aiida_abinit.data:DiffParameters"
        ],
        "aiida.calculations": [
            "abinit = aiida_abinit.calculations:AbinitCalculation"
        ],
        "aiida.parsers": [
            "abinit = aiida_abinit.parsers:AbinitParser"
        ],
        "aiida.cmdline.data": [
            "abinit = aiida_abinit.cli:data_cli"
        ],
	    "aiida.workflows": [
	        "abinit.base = aiida_abinit.workflows.base:AbinitBaseWorkChain"
	    ]
    },
    "include_package_data": true,
    "setup_requires": ["reentry"],
    "reentry_register": true,
    "install_requires": [
        "aiida-core>=1.1.0,<2.0.0",
        "aiida-pseudo>=0.5.0",
        "six",
        "voluptuous"
    ],
    "extras_require": {
        "testing": [
            "pgtest~=1.3.1",
            "wheel~=0.31",
            "coverage",
            "pytest~=3.6,<5.0.0",
            "pytest-cov"
        ],
        "pre-commit": [
            "astroid==2.2.5",
            "pre-commit==1.20.0",
            "prospector==1.1.7",
            "pylint==2.3.1"
        ],
        "docs": [
            "sphinx",
            "sphinxcontrib-contentui",
            "sphinxcontrib-details-directive; python_version>='3.0'",
            "sphinx-rtd-theme"
        ]
    }
}
