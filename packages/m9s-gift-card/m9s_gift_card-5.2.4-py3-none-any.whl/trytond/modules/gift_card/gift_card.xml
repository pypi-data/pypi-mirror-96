<tryton>
    <data>
        <record model="ir.ui.view" id="gift_card_form_view">
            <field name="model">gift_card.gift_card</field>
            <field name="type">form</field>
            <field name="name">gift_card_form</field>
        </record>

        <record model="ir.ui.view" id="gift_card_tree_view">
            <field name="model">gift_card.gift_card</field>
            <field name="type">tree</field>
            <field name="name">gift_card_tree</field>
        </record>

        <record model="ir.action.act_window" id="act_gift_card">
            <field name="name">Gift Card</field>
            <field name="res_model">gift_card.gift_card</field>
            <field name="search_value"></field>
        </record>
        <record model="ir.action.act_window.view" id="act_gift_card_view1">
            <field name="sequence" eval="20"/>
            <field name="view" ref="gift_card_form_view"/>
            <field name="act_window" ref="act_gift_card"/>
        </record>
        <record model="ir.action.act_window.view" id="act_gift_card_view2">
            <field name="sequence" eval="10"/>
            <field name="view" ref="gift_card_tree_view"/>
            <field name="act_window" ref="act_gift_card"/>
        </record>

        <record model="ir.action.wizard" id="gift_card_redeem_wizard">
            <field name="name">Redeem Gift Card</field>
            <field name="wiz_name">gift_card.redeem.wizard</field>
            <field name="model">gift_card.gift_card</field>
        </record>
        <record model="ir.action.keyword" id="gift_card_redeem_keyword">
            <field name="keyword">form_action</field>
            <field name="model">gift_card.gift_card,-1</field>
            <field name="action" ref="gift_card_redeem_wizard"/>
        </record>

        <record model="ir.ui.view" id="redeem_start_view_form">
            <field name="model">gift_card.redeem.start</field>
            <field name="type">form</field>
            <field name="name">redeem_start_form</field>
        </record>
        <record model="ir.ui.view" id="redeem_done_view_form">
            <field name="model">gift_card.redeem.end</field>
            <field name="type">form</field>
            <field name="name">redeem_done_form</field>
        </record>

        <menuitem parent="gift_card_main_menu" action="act_gift_card" id="gift_card_menu"
          sequence="10"/>

        <record model="ir.action.report" id="report_gift_card">
            <field name="name">Gift Card</field>
            <field name="model">gift_card.gift_card</field>
            <field name="report_name">gift_card.gift_card</field>
            <field name="report">gift_card/gift_card.odt</field>
        </record>

        <record model="ir.action.keyword" id="print_keyword">
            <field name="keyword">form_print</field>
            <field name="model">gift_card.gift_card,-1</field>
            <field name="action" ref="report_gift_card"/>
        </record>

        <record model="ir.action.act_window" id="act_sales">
            <field name="name">Sales</field>
            <field name="res_model">sale.sale</field>
            <field name="domain" eval="[('lines.gift_cards', 'in', Eval('active_ids'))]" pyson="1"/>
        </record>
        <record model="ir.action.keyword" id="act_open_sale_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">gift_card.gift_card,-1</field>
            <field name="action" ref="act_sales"/>
        </record>

        <record id="gift_card_email_receivers" model="res.group">
            <field name="name">Gift Card E-mail Receivers</field>
        </record>

        <record model="ir.action-res.group" id="gift_card_redeem_wizard_group2">
            <field name="action" ref="gift_card_redeem_wizard"/>
            <field name="group" ref="account.group_account_admin"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_gift_card_form_domain_draft">
            <field name="name">Draft</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('state', '=', 'draft')]" pyson="1"/>
            <field name="act_window" ref="act_gift_card"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_gift_card_form_domain_active">
            <field name="name">Active</field>
            <field name="sequence" eval="20"/>
            <field name="domain" eval="[('state', '=', 'active')]" pyson="1"/>
            <field name="act_window" ref="act_gift_card"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_gift_card_form_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="30"/>
            <field name="domain"></field>
            <field name="act_window" ref="act_gift_card"/>
        </record>

        <!-- Buttons -->
	<record model="ir.model.button" id="gift_card_cancel_button">
            <field name="name">cancel</field>
            <field name="string">Cancel</field>
            <field name="model" search="[('model', '=', 'gift_card.gift_card')]"/>
        </record>
        <record model="ir.model.button-res.group" id="gift_card_cancel_button_group_account">
            <field name="button" ref="gift_card_cancel_button"/>
            <field name="group" ref="account.group_account"/>
        </record>

	<record model="ir.model.button" id="gift_card_draft_button">
            <field name="name">draft</field>
            <field name="string">Draft</field>
            <field name="model" search="[('model', '=', 'gift_card.gift_card')]"/>
        </record>
        <record model="ir.model.button-res.group" id="gift_card_draft_button_group_account">
            <field name="button" ref="gift_card_draft_button"/>
            <field name="group" ref="account.group_account"/>
        </record>

	<record model="ir.model.button" id="gift_card_activate_button">
            <field name="name">activate</field>
            <field name="string">Activate</field>
            <field name="model" search="[('model', '=', 'gift_card.gift_card')]"/>
        </record>
        <record model="ir.model.button-res.group" id="gift_card_activate_button_group_account">
            <field name="button" ref="gift_card_activate_button"/>
            <field name="group" ref="account.group_account"/>
        </record>
    </data>
</tryton>
